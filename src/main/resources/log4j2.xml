<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="json_appender" fileName="logs/${sys:puncatlogfilename}.json">
            <JsonLayout complete="true" objectMessageAsJsonObject="true"/>
        </File>
        <File name="simple_appender" fileName="logs/${sys:puncatlogfilename}.txt">
            <PatternLayout>
                <Pattern>%d{DEFAULT}\n%m%n\n\n</Pattern>
            </PatternLayout>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.batik" level="OFF"/>
        <Logger name="de.tuebingen.uni.sfs.germanet.api" level="info"/>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="json_logger" level="trace" additivity="false">
            <AppenderRef ref="json_appender"/>
        </Logger>
        <Logger name="simple_logger" level="trace" additivity="false">
            <AppenderRef ref="simple_appender"/>
        </Logger>
    </Loggers>
</Configuration>