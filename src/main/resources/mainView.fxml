<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane hgap="30.0" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.controller.MainController" alignment="TOP_CENTER">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="30" halignment="CENTER"/>
        <ColumnConstraints percentWidth="35" halignment="CENTER"/>
        <ColumnConstraints percentWidth="35" halignment="CENTER"/>
    </columnConstraints>

    <Label text="Source" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <fx:include fx:id="source1" source="sourceView.fxml" GridPane.rowIndex="1"
                GridPane.columnIndex="0"/>
    <fx:include fx:id="source2" source="sourceView.fxml" GridPane.rowIndex="2"
                GridPane.columnIndex="0"/>

    <Label text="Target" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
    <fx:include fx:id="target1" source="targetView.fxml" GridPane.rowIndex="1"
                GridPane.columnIndex="1"/>
    <fx:include fx:id="target2" source="targetView.fxml" GridPane.rowIndex="1"
                GridPane.columnIndex="2"/>
</GridPane>
