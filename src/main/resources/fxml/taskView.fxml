<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.ofai.punderstanding.puncat.controller.TaskController"
          fx:id="container"
          vgap="10" hgap="10">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="BOTTOM" vgrow="ALWAYS"/>
        <RowConstraints valignment="BOTTOM"/>
        <RowConstraints valignment="BOTTOM"/>
        <RowConstraints valignment="BOTTOM"/>
    </rowConstraints>

    <ScrollPane fx:id="quotePane" GridPane.columnIndex="0" GridPane.rowIndex="0"
                style="
                -fx-border-color: black;
                -fx-border-width: 1;
                -fx-border-style: solid;
                -fx-background-color: white;"/>

    <ImageView fx:id="imageView" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <HBox spacing="10" alignment="BOTTOM_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="firstButton" id="main-pagination-btn" text="&lt;&lt;">
            <tooltip>
                <Tooltip text="Jump to the first translation task"/>
            </tooltip>
        </Button>
        <Button fx:id="prevButton" id="main-pagination-btn" text="&lt;">
            <tooltip>
                <Tooltip text="Step to the previous translation task"/>
            </tooltip>
        </Button>
        <Button fx:id="nextButton" id="main-pagination-btn" text="&gt;">
            <tooltip>
                <Tooltip text="Step to the next translation task"/>
            </tooltip>
        </Button>
        <Button fx:id="lastButton" id="main-pagination-btn" text="&gt;&gt;">
            <tooltip>
                <Tooltip text="Jump to the last translation task"/>
            </tooltip>
        </Button>
    </HBox>
</GridPane>
