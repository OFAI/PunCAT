<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.ofai.punderstanding.puncat.controller.MainController"
          fx:id="container"
          hgap="10.0" vgap="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="25" hgrow="NEVER"/>
        <ColumnConstraints halignment="CENTER" percentWidth="75"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <GridPane fx:id="taskAndCandidateGridPane" GridPane.columnIndex="0" GridPane.rowIndex="0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <!-- <RowConstraints vgrow="ALWAYS"/> -->
        </rowConstraints>
    </GridPane>
    <GridPane fx:id="senseGroupsGridPane" GridPane.columnIndex="1" GridPane.rowIndex="0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" percentHeight="50"/>
            <RowConstraints vgrow="ALWAYS" percentHeight="50"/>
        </rowConstraints>
    </GridPane>
</GridPane>
