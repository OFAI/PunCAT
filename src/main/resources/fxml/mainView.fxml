<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.ofai.punderstanding.puncat.controller.MainController"
          fx:id="rootGridPane"
          hgap="10.0" vgap="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="25"/>
        <ColumnConstraints halignment="CENTER" percentWidth="75"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="50"/>
        <RowConstraints percentHeight="50"/>
    </rowConstraints>

    <BorderPane fx:id="container" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <center>
            <VBox fx:id="imageContainer">
                <ImageView fx:id="imageView" preserveRatio="true"/>
            </VBox>
        </center>
        <bottom>
            <HBox spacing="5" alignment="CENTER">
                <Button fx:id="firstButton" id="main-pagination-btn" text="&lt;&lt;" visible="false">
                    <tooltip>
                        <Tooltip text="Jump to the first translation task"/>
                    </tooltip>
                </Button>
                <Button fx:id="prevButton" id="main-pagination-btn" text="&lt;" visible="false">
                    <tooltip>
                        <Tooltip text="Step to the previous translation task"/>
                    </tooltip>
                </Button>
                <Button fx:id="nextButton" id="main-pagination-btn" text="&gt;" visible="false">
                    <tooltip>
                        <Tooltip text="Step to the next translation task"/>
                    </tooltip>
                </Button>
                <Button fx:id="lastButton" id="main-pagination-btn" text="&gt;&gt;" visible="false">
                    <tooltip>
                        <Tooltip text="Jump to the last translation task"/>
                    </tooltip>
                </Button>
            </HBox>
        </bottom>
    </BorderPane>

</GridPane>
